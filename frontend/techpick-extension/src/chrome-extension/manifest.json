{
  "manifest_version": 3,
  "name": "TechPick Extension",
  "description": "TechPick Extension description",
  "version": "0.2",
  "icons": {
    "16": "./pick16.png",
    "32": "./pick32.png",
    "48": "./pick48.png",
    "128": "./pick128.png"
  },

  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "cookies",
    "storage",
    "contextMenus"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["contentscript.js"]
    }
  ],
  "action": {
    "default_popup": "index.html"
  }
}
